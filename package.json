{
  "name": "blues-dance-festival-finder",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "cd packages/database && npx prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detached": "docker-compose up --build -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    "db:generate": "npm run generate --workspace=@festival-scout/database",
    "db:migrate": "npm run migrate --workspace=@festival-scout/database",
    "db:migrate:dev": "cd packages/database && npx prisma migrate dev",
    "db:studio": "npm run studio --workspace=@festival-scout/database",
    "db:seed": "npm run seed --workspace=@festival-scout/database",
    "migrate:data": "node scripts/data-migration.js",
    "setup:supabase": "node -p \"console.log('Follow: scripts/complete-supabase-setup.md')\"",
    "docker:logs": "docker-compose logs -f",
    "docker:db": "docker-compose up postgres redis -d",
    "docker:test": "docker-compose exec web npm test",
    "packages:install": "npm install --workspaces",
    "packages:build": "npm run build --workspaces",
    "packages:lint": "npm run lint --workspaces",
    "db:reset": "npm run migrate:reset --workspace=@festival-scout/database",
    "db:push": "npm run db:push --workspace=@festival-scout/database",
    "db:status": "npm run migrate:status --workspace=@festival-scout/database"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.12.0",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.1",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "next": "^14.2.32",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "prisma": "^6.12.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.6",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2"
  }
}
