async function testFollowingModel() {
  console.log('ðŸ§ª Testing Following Model...')
  
  try {
    // Create test data
    const user = await db.user.create({
      data: {
        email: 'following.test@example.com',
        name: 'Following Test User'
      }
    })
    
    const teacher = await db.teacher.create({
      data: {
        name: 'Followable Teacher',
        slug: 'followable-teacher'
      }
    })
    
    // Test following
    const following = await Models.Following.follow({
      userId: user.id,
      targetType: 'TEACHER',
      targetId: teacher.id
    })
    console.log('   âœ… Following relationship created')
    
    // Test duplicate following validation
    try {
      await Models.Following.follow({
        userId: user.id,
        targetType: 'TEACHER',
        targetId: teacher.id
      })
      console.log('   âŒ Should have thrown duplicate following error')
    } catch (error) {
      console.log('   âœ… Duplicate following correctly rejected')
    }
    
    // Check follower count update
    const updatedTeacher = await db.teacher.findUnique({ where: { id: teacher.id } })
    console.log('   âœ… Follower count updated:', updatedTeacher?.followerCount)
    
    // Test unfollowing
    await Models.Following.unfollow(user.id, 'TEACHER', teacher.id)
    console.log('   âœ… Following relationship removed')
    
    // Check follower count decrease
    const finalTeacher = await db.teacher.findUnique({ where: { id: teacher.id } })
    console.log('   âœ… Follower count decreased:', finalTeacher?.followerCount)
    
    // Cleanup
    await db.user.delete({ where: { id: user.id } })
    await db.teacher.delete({ where: { id: teacher.id } })
    console.log('   âœ… Following test data deleted successfully')
    
  } catch (error) {
    console.error('   âŒ Following model test failed:', error instanceof Error ? error.message : 'Unknown error')
    throw error
  }
}

