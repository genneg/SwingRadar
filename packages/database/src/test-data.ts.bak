    // Delete international venues
    await db.venue.deleteMany({
      where: {
        name: {
          in: ['Tokyo Blues Studio', 'Buenos Aires Tango & Blues']
        }
      }
    })
    
    // Delete test users
    await db.user.deleteMany({
      where: {
        email: {
          in: ['poweruser@bluestest.com']
